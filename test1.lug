main{
    var int i;
    var int y;
    var int f;

    i:=3;
    y:=1;
    f:=0;

    while((i > 0)) do{
        if ((i == y)){
            f := func(i,y);        
        };
        i := (i-1);
        print(i);
    };

    print(f);

}

function int func(int a, int b){
    var int res;
    res := (a + b);

    return res;
}